<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson13_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF0E1"
    tools:context="com.tranginc.trangnhe.studyandroid.lesson13_GridView.Lesson13MainActivity">

    <TextView
        android:id="@+id/idtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select:"
        android:background="@android:color/holo_green_light"
        android:padding="15dp"/>

    <Button
        android:id="@+id/buttonSelect1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridView with Word"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/myyellow"
        android:layout_below="@+id/idtv"/>
    <Button
        android:id="@+id/buttonSelect2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridView with Photo"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/myyellow"
        android:layout_below="@+id/buttonSelect1"/>
</RelativeLayout>
