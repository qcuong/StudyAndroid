<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lesson11_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tranginc.trangnhe.studyandroid.lesson11_AutoCompleteTextView.Lesson11MainActivity">

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_light"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/btnOK"
        android:layout_alignTop="@id/btnOK"
        android:layout_toLeftOf="@id/btnOK"
        android:completionThreshold="1"
        android:ems="10"
        android:paddingLeft="10dp"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/lvCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnOK">

    </ListView>

</RelativeLayout>
